@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

stage-green = #25C5A1
stage-blue = #2E334F
stage-red = #F65869

section.image
  -webkit-background-size: cover
  -moz-background-size: cover
  background-size: cover
  background-position: center
  background-repeat: no-repeat !imporant

section.image--hm
  background-image: url('../images/hm.png') !important
  background-position: bottom !important

section.image--nedap-back
  background-image: url('../images/nedap_backyard.png') !important

section.image--security
  background-image: url('../images/security.png') !important

section.image--worksheet
  background-image: url('../images/worksheet.png') !important

section.image--koe
  background-image: url('../images/koe.png') !important

section.image--groenlo
  background-image: url('../images/groenlo.png') !important


body
  background: stage-blue
  font-family: Roboto

.bespoke-slide
  background: stage-green
  width: 100%
  margin-left: 0
  margin-top: 0
  top: 0
  left: 0
  color: #fff
  height: 100%

  &.green
    background: stage-green

  &.blue
    background: stage-blue

  &.red
    background: stage-red

  h1
    font-weight: 400
    font-size: 6em

  h2
    font-weight: 300
    font-size: 3.5em

  h3.top-text
    font-size: 1.75em
    color: #fff
    font-weight: 300

  h1.intro
    font-weight: 400
    text-transform: uppercase
    font-size: 8em
    line-height: 130px

  h1.wow
    font-weight: 900
    text-transform: uppercase
    line-height: 1em

  h1.left
    text-align: left

  h1.wtf
    font-size: 8em

  h1.standfort, h1.experiment
    font-size: 8em

  h1.done
    font-size: 10em

  h1.logo
    padding: 50px

  h1.twitter
    padding: 20px 50px 50px 50px

  h1
    span
      color: #273540

  h2.health
    font-size: 6em
    text-transform: uppercase

  img.svg
    width: 7%
    height: 7%
    padding: 5px

  .example
    padding-top: 1%
    padding-left: 2%
    padding-right: 2%

  .twitter-example
    width: 75%
    // height: 75%

  ul
    list-style: none
    font-size: 2em
    padding-top: 20px

    li:first-child
      list-style: none

    li
      text-align: left

      img.svg
        display: inline-block

      img.svg.bolt
        height: 44px
        vertical-align: -7px

      img.svg.code
        vertical-align: -4px

      img.svg.presentation
        vertical-align: -6px

      img.svg.system
        vertical-align: -5px

      p
        margin: 20px
        display: inline-block

section.intro
  .wrapper
    min-height: 150px
    margin-left: -10%

    .photo, .text
      display: inline-block

    .photo
      width: 250px
      min-height: 150px
      border-right: 2px solid #fff

    .text
      width: 500px
      text-align: left
      vertical-align: top
      padding: 25px 30px

      h4
        font-size: 3em
        letter-spacing: 0em
        font-weight: 400

      h5
        font-size: 2.5em
        font-weight: 300

        a
          color: #fff

        a:hover
          color: #273540

.bespoke-progress-bar
  background: rgba(255, 255, 255, 0.5)
  height: 10px
